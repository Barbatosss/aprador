<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateOutfit"
    android:background="#d9d9d9">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#FEFEFE"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">
        <View
            android:id="@+id/BackCreateOutfit"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_view"
            android:clickable="true"
            android:contentDescription="Back"
            android:focusable="true"
            android:scaleX="-1" />

        <View
            android:id="@+id/CreateOutfitlogo"
            android:layout_width="270dp"
            android:layout_height="37dp"
            android:scaleType="fitCenter"
            android:background="@drawable/createoutfit_logo"
            android:contentDescription="Logo" />

        <View
            android:id="@+id/SaveOutfit"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/save_createoutfit"
            android:clickable="true"
            android:contentDescription="Edit Outfit"
            android:focusable="true" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@android:color/white"
                android:layout_marginBottom="24dp"
                android:elevation="2dp"
                android:outlineProvider="background"
                android:clipToPadding="false">

                <ImageView
                    android:id="@+id/outfitPreviewImage"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:src=""
                    android:scaleType="centerInside"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="Outfit Preview" />

                <ImageView
                    android:id="@+id/expandButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/expand_createoutfit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="8dp"
                    android:contentDescription="Expand"
                    android:clickable="true"
                    android:focusable="true"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select Items"
                        android:textColor="#1A1A1A"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/add_createoutfit"
                        android:contentDescription="Add Item"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All (0)"
                            android:background="@drawable/selected_button_background"
                            android:textColor="@color/white"
                            app:backgroundTint="@null"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginEnd="8dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:textAllCaps="false"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Classic (0)"
                            android:background="@drawable/unselected_button_background"
                            android:textColor="#1A1A1A"
                            app:backgroundTint="@null"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:textAllCaps="false"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sport (0)"
                            android:background="@drawable/unselected_button_background"
                            android:textColor="#1A1A1A"
                            app:backgroundTint="@null"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:textAllCaps="false"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Casual (0)"
                            android:background="@drawable/unselected_button_background"
                            android:textColor="#1A1A1A"
                            app:backgroundTint="@null"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:layout_marginEnd="8dp"
                        android:elevation="2dp"
                        android:outlineProvider="background" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:layout_marginStart="8dp"
                        android:elevation="2dp"
                        android:outlineProvider="background" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select Category"
                        android:textColor="#1A1A1A"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/add_createoutfit"
                        android:contentDescription="Add Category"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The category into which the look falls after it has been created"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:alignmentMode="alignBounds"
                    android:columnOrderPreserved="false">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Classic"
                        android:background="@drawable/unselected_button_background"
                        android:textColor="#1A1A1A"
                        app:backgroundTint="@null"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textAllCaps="false"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Sport"
                        android:background="@drawable/unselected_button_background"
                        android:textColor="#1A1A1A"
                        app:backgroundTint="@null"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textAllCaps="false"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Casual"
                        android:background="@drawable/selected_button_background"
                        android:textColor="@color/white"
                        app:backgroundTint="@null"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textAllCaps="false"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Festive"
                        android:background="@drawable/unselected_button_background"
                        android:textColor="#1A1A1A"
                        app:backgroundTint="@null"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textAllCaps="false"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Home"
                        android:background="@drawable/unselected_button_background"
                        android:textColor="#1A1A1A"
                        app:backgroundTint="@null"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textAllCaps="false"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Outside"
                        android:background="@drawable/unselected_button_background"
                        android:textColor="#1A1A1A"
                        app:backgroundTint="@null"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textAllCaps="false"/>

                </GridLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>